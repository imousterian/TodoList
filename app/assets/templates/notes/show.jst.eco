<header class="title-container">
    <input type="text" class="note-title" value="<%= @notey.get('title') %>" placeholder="Title..."/>
</header>
<div class="body">
    <textarea class="note-content" placeholder="Content..."><%= @notey.get('content') %></textarea>
</div>

<div class="normal-footer"></div>

<div class="editing-footer">
    <button class="save">Save</button>
</div>

<button class="destroy-note" tabindex="-1">Remove</button>

